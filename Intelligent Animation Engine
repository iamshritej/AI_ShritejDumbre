FUNCTION create_educational_animations(formatted_slides, sector):
    FOR each_slide IN formatted_slides:
        content_type = classify_slide_content(each_slide)

        SWITCH content_type:
            CASE "mathematical_formula":
                animation = create_step_by_step_derivation(each_slide)
            CASE "algorithm_demonstration":
                animation = create_code_execution_visualization(each_slide)
            CASE "spatial_concept": // GIS-specific
                animation = create_geographic_visualization(each_slide)
            CASE "technical_system": // Space Tech-specific
                animation = create_system_diagram_animation(each_slide)

        RETURN optimize_for_educational_effectiveness(animation)
